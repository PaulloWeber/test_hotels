{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "types": ["reflect-metadata", "jest", "node"],
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true
    // "rootDir": "src",
    // "baseUrl": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["coverage", "**/*.test.ts", "__tests__"]
}
